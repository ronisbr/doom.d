# -*- mode: snippet -*-
# name: Julia comment underlined
# key: jlcund
# condition: t
# --

${1:$(let* ((col (current-column))
            (str "#")
            (pad (ffloor (/ (- fill-column col (string-width yas-text)) 2.0))))
       (while (< (length str) pad)
         (setq str (concat str " ")))
       str)} ${1:comment}
${1:$(let* ((col (current-column))
            (str "# "))
       (while (< (length str) (- fill-column col))
         (setq str (concat str "=")))
       str)}
$0